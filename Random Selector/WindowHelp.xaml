<Window x:Class="Random_Selector.WindowHelp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Random_Selector"
        mc:Ignorable="d"
        Title="WindowHelp" Height="450" Width="800" SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="126*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="#FFE2BAB8"/>
                <GradientStop Color="#FFF7D869" Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>
        <TextBlock x:Name="txtblkHelp" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Bij de inladen van de app zal de hoofdlistbox ingevuld worden met worden met alle studenten van het tekstbestand. Als het tekstbestand niet bestaat of leeg is, zal deze aangemaakt worden en dan ingevuld worden met de info(level,voornaam,achternaam) over de studenten. De info wordt ingevoerd in de daarvoor bestemde textboxen. Op click van button Generate wordt een groep gemaakt van de studenten. Het aantal studenten wordt ingevoerd in een textbox. De selectie gebeurd willekeurig, maar zal altijd 1 &quot;level 1&quot; student bevatten en wordt verder opgevuld met studenten uit andere levels. Vb. Level,Voornaam,Achternaam 1,Jon,Adams 1,Jack,Jackson 2,Mustafa,Gorissen 3,Atilla,Vandersmissen 2,Quinten,Declerck 1,Pearl,Desmet 3,Kenan,Kurda 2,Benedict,Cumberbatch 3,Manuel,Lopes 1,Ilse,Degroote 2,Cindy,Deschrijver 2,Ruud,Kenis Programma kan meerdere groepen kunnen maken, maar een student mag enkel tot 1 groep behoren." VerticalAlignment="Top" Width="350" Height="375" FontSize="14" Margin="12,10,0,0" Grid.Column="2" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
